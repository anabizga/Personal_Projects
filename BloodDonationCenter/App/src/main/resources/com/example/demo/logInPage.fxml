<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="600.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.LogIn">
   <children>
      <AnchorPane prefHeight="600.0" prefWidth="200.0" style="-fx-background-color: FFFFFF;">
         <children>
            <ImageView fitHeight="150.0" fitWidth="200.0" layoutX="25.0" layoutY="225.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@logo.png" />
               </image></ImageView>
         </children>
      </AnchorPane>
      <AnchorPane layoutX="200.0" prefHeight="600.0" prefWidth="400.0" style="-fx-background-color: BB1717;">
         <children>
            <Label fx:id="log" layoutX="44.0" layoutY="121.0" text="Log in into your account." textFill="WHITE">
               <font>
                  <Font name="Century Gothic Bold" size="26.0" />
               </font>
            </Label>
            <Label fx:id="username" layoutX="32.0" layoutY="242.0" text="username" textFill="WHITE">
               <font>
                  <Font name="Cooper Black" size="24.0" />
               </font>
            </Label>
            <Label fx:id="password" layoutX="32.0" layoutY="335.0" text="password" textFill="WHITE">
               <font>
                  <Font name="Cooper Black" size="24.0" />
               </font>
            </Label>
            <TextField fx:id="tf_username" layoutX="172.0" layoutY="228.0" prefHeight="58.0" prefWidth="210.0">
               <font>
                  <Font name="Century Gothic" size="17.0" />
               </font>
            </TextField>
            <Button fx:id="logIn" layoutX="140.0" layoutY="441.0" mnemonicParsing="false" style="-fx-background-color: FFFFFF; -fx-cursor: hand;" text="login" textFill="#8e1212">
               <font>
                  <Font name="Century Gothic Bold" size="22.0" />
               </font>
            </Button>
            <Label fx:id="not_member" layoutX="32.0" layoutY="525.0" text="Not a member?" textFill="WHITE">
               <font>
                  <Font name="Century Gothic" size="18.0" />
               </font>
            </Label>
            <Button fx:id="create_account" layoutX="179.0" layoutY="519.0" mnemonicParsing="false" style="-fx-background-color: transparent; -fx-cursor: hand;" text="Create an account!" textFill="WHITE">
               <font>
                  <Font name="Century Gothic Bold" size="18.0" />
               </font>
            </Button>
            <PasswordField fx:id="pf_password" layoutX="172.0" layoutY="325.0" prefHeight="49.0" prefWidth="210.0" style="-fx-background-color: FFFFFF;">
               <font>
                  <Font name="Century Gothic" size="16.0" />
               </font>
            </PasswordField>
            <Button fx:id="back" layoutX="21.0" layoutY="36.0" mnemonicParsing="false" style="-fx-background-color: transparent; -fx-cursor: hand;" text="&lt;Back" textFill="WHITE" underline="true">
               <font>
                  <Font name="Century Gothic" size="22.0" />
               </font>
            </Button>
         </children></AnchorPane>
   </children>
</AnchorPane>
